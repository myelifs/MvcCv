@using MvcCv2.Models.Entity
@model List<TblAdmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin İşlemleri</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıci Adı</th>
        <th>Düzenle</th>
        <th>Kaldır</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.KullaniciAdi</td>
            <td><a href="/Admin/AdminDüzenle/@item.ID" class="btn btn-danger">Düzenle</a></td>
            <td><a href="/Admin/AdminSil/@item.ID" class="btn btn-warning">Kaldır</a></td>



        </tr>
    }
</table>
<a href="/Admin/AdminEkle/" class="btn btn-primary">Yeni Kullanıcı Ekle</a>



